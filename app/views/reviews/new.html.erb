<div class="container">
  <h1>Create a new review for <%= @restaurant.name %></h1>
    <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.error_notification %>

    <%= f.input :content %>
    <%= f.input :rating, collection: [0, 1, 2, 3, 4, 5], prompt: "choose a rating", selected: "3" %>

    <%= f.button :submit %>
  <% end %>
</div>
